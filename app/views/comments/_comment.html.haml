%li
  = comment.commenter
  \:
  %quote= comment.body
  %br/
  = I18n.l(comment.created_at, format: :short)
  - if comment.created_at != comment.updated_at
    (updated #{I18n.l(comment.updated_at, format: :short)})
  %br/
  = link_to 'Delete', [comment.article, comment], method: :delete, data: { confirm: 'Are you sure?' }
